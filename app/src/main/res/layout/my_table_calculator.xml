<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/results_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:text="计算结果"
        android:textSize="30sp" />

    <TableRow>

        <Button
            android:id="@+id/btn_ac"
            android:text="AC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_c"
            android:text="c"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_percentage"
            android:text="%"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_multiply"
            android:text="×"
            android:textSize="20sp" />
    </TableRow>
    <!--第二行-->
    <TableRow>

        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_divide"
            android:text="÷"
            android:textSize="20sp" />
    </TableRow>
    <!--第三行-->
    <TableRow>

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_minus"
            android:text="-"
            android:textSize="20sp" />
    </TableRow>
    <!--第四行-->
    <TableRow>

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:textSize="20sp" />
    </TableRow>
    <!--第五行-->
    <TableRow>

        <Button
            android:id="@+id/btn_point"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_equals"
            android:text="="
            android:layout_span="2"
            android:textSize="20sp" />
    </TableRow>
</TableLayout>